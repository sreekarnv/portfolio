---
import "~/scss/main.scss";
import Cursor from "~/components/ui/Cursor.astro";


export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Sreekar Nutulapati | Full Stack Developer",
  description = "Full Stack Developer specializing in Python, TypeScript, Node.js, and modern web technologies. Building scalable systems and beautiful interfaces.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <Cursor />
    <slot />
    <script>
      import "~/ts/main";
    </script>
    <script src="https://web3forms.com/client/script.js" async defer></script>
  </body>
</html>
