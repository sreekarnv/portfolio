---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const navLinks = [
  { href: "#about", label: "About" },
  { href: "#experience", label: "Experience" },
  { href: "#projects", label: "Projects" },
  { href: "#services", label: "Services" },
];
---

<nav class:list={["nav", className]} id="nav">
  <div class="nav__logo">
    <a href="#hero" class="nav__logo-link" data-magnetic>SN</a>
  </div>

  <div class="nav__menu">
    {
      navLinks.map((link) => (
        <a href={link.href} class="nav__link" data-magnetic>
          {link.label}
        </a>
      ))
    }
    <a href="#contact" class="nav__link nav__link--cta" data-magnetic>
      Let's Talk
    </a>
  </div>

  <button class="nav__toggle" id="nav-toggle" aria-label="Toggle menu">
    <span class="nav__toggle-bar"></span>
    <span class="nav__toggle-bar"></span>
  </button>
</nav>

<style lang="scss">
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: var(--space-lg) var(--container-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    transition: all var(--duration-normal) var(--ease-out-quart);

    &--scrolled {
      padding: var(--space-md) var(--container-padding);
      background: rgba(10, 10, 11, 0.8);
      backdrop-filter: blur(var(--blur-lg));
      border-bottom: 1px solid var(--color-border);
    }

    &__logo-link {
      font-size: var(--text-xl);
      font-weight: 700;
      letter-spacing: 0.05em;
      background: var(--gradient-accent);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    &__menu {
      display: flex;
      align-items: center;
      gap: var(--space-xl);
    }

    &__link {
      font-size: var(--text-sm);
      font-weight: 500;
      color: var(--color-text-secondary);
      transition: color var(--duration-fast) ease;
      position: relative;

      &::after {
        content: "";
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 1px;
        background: var(--color-accent);
        transition: width var(--duration-normal) var(--ease-out-expo);
      }

      &:hover {
        color: var(--color-text);

        &::after {
          width: 100%;
        }
      }

      &--cta {
        padding: var(--space-sm) var(--space-lg);
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-full);
        color: var(--color-text);
        transition: all var(--duration-normal) var(--ease-out-quart);

        &::after {
          display: none;
        }

        &:hover {
          background: var(--color-accent);
          border-color: var(--color-accent);
        }
      }
    }

    &__toggle {
      display: none;
      flex-direction: column;
      gap: 6px;
      padding: var(--space-sm);

      &--active {
        .nav__toggle-bar:first-child {
          transform: rotate(45deg) translate(5px, 5px);
        }

        .nav__toggle-bar:last-child {
          transform: rotate(-45deg) translate(6px, -6px);
        }
      }
    }

    &__toggle-bar {
      width: 24px;
      height: 2px;
      background: var(--color-text);
      transition: all var(--duration-normal) var(--ease-out-quart);
    }

    @media (max-width: 768px) {
      &__menu {
        display: none;
      }

      &__toggle {
        display: flex;
      }
    }
  }
</style>
